{
  "name": "SetUp-Master",
  "displayName": "SetUp-Master",
  "publisher": "SetupMaster",
  "description": "A VS Code extension for installing dependencies like Vite, Tailwind, Redux, Axios, etc.",
  "repository": {
    "type": "git",
    "url": "https://github.com/swapnilchougule00/vs-code-extension-installer.git"
  },
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "installerView",
          "title": "Setup Master",
          "icon": "assets/download.svg"
        }
      ]
    },
    "views": {
      "installerView": [
        {
          "id": "installerDependencies",
          "name": "Dependencies"
        }
      ]
    },
    "commands": [
      {
        "command": "installerDependencies.toggleDependency",
        "title": "select"
      },
      {
        "command": "installerDependencies.installSelectedDependencies",
        "title": "Install All Selected Dependencies",
        "icon": "$(check-all)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "installerDependencies.installSelectedDependencies",
          "when": "view == installerDependencies",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "installerDependencies.toggleDependency",
          "when": "view == installerDependencies",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
