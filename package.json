{
  "name": "installer",
  "displayName": "Installer",
  "description": "A VS Code extension for installing dependencies like Vite, Tailwind, Redux, Axios, etc.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:installerDependencies",
    "onCommand:installer.toggleDependency",
    "onCommand:installer.installSelectedDependencies"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "installerView",
          "title": "Installer",
          "icon": "assets/icons/home.svg"
        }
      ]
    },
    "views": {
      "installerView": [
        {
          "id": "installerDependencies",
          "name": "Dependencies"
        }
      ]
    },
    "commands": [
      {
        "command": "installer.toggleDependency",
        "title": "Toggle Dependency"
      },
      {
        "command": "installer.installSelectedDependencies",
        "title": "Install All Selected Dependencies"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "installer.installSelectedDependencies",
          "when": "view == installerDependencies",
          "group": "navigation",
          "title": "Install All",
          "icon": {
            "light": "assets/icons/install-light.svg",
            "dark": "assets/icons/install-dark.svg"
          }
        }
      ],
      "view/item/context": [
        {
          "command": "installer.toggleDependency",
          "when": "view == installerDependencies",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
